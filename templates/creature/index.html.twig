{% extends 'base.html.twig' %}

{% block body %}

<div class="container" style="margin-top: 12px;">

    <div class="card-deck">
        {% for entity in entities %}
            <div class="card" style="width: 18rem;">
                
                <h5 class="card-header">{{ entity.name }}</h5>

                <div class="card-body">
                    <p class="card-text">ID: {{entity.id }}</p>
                    <p class="card-text">Defense: {{ entity.defense }}</p>
                    <p class="card-text">Attack: {{ entity.attack }}</p>

                    <div class="btn-group">
                        <a href="{{ path('creature_show', { 'id': entity.id }) }}"
                            class="btn btn-outline-success btn-sm">Show</a>
                        <a href="{{ path('creature_edit', { 'id': entity.id }) }}"
                            class="btn btn-outline-primary btn-sm">Edit</a>
                        <a href="{{ path('creature_delete', { 'id': entity.id }) }}"
                            class="btn btn-outline-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="btn-group mt-3">
        <a href="{{ path('creature_create') }}" class="btn btn-primary">Add new creature</a>
    </div>
</div>
    
{% endblock %}
