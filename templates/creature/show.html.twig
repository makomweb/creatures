{% extends 'base.html.twig' %}

{% block body -%}
    <h1>Creature</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Attack</th>
                <td>{{ entity.attack }}</td>
            </tr>
            <tr>
                <th>Defense</th>
                <td>{{ entity.defense }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('creature_index') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('creature_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
</ul>
{% endblock %}
